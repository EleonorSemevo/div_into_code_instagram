<div class="ttt">
  <%= form_with(model: @user, local: true) do |form|%>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-size">
      <div class="field">

        <%= form.text_field :name, class: "form_field form-control", placeholder: "Name" %>
      </div>

      <div class="field">

        <%= form.text_field :email, class: "form_field form-control", placeholder: "Email" %>
      </div>

      <div class="field">

        <%= form.password_field :password, class: "form_field form-control", placeholder: "Password" %>
      </div>

      <div class="field">

        <%= form.password_field :password_confirmation, class: "form_field form-control", placeholder: "Password Confirmation" %>
      </div>

      <div class="actions">
        <%= form.submit "s'engistrer", class: "btn btn-primary enregistrer"%>
      </div>


    </div>

  <% end %>


</div>